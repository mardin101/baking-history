@page "/"
@inject NavigationManager Navigation

<PageTitle>Baking History</PageTitle>

<h1>Welcome to Baking History</h1>

<p>Track and analyze your baking results with detailed records of each bake.</p>

<div class="mt-4">
    <h3>Get Started</h3>
    <p>Record your baking data including:</p>
    <ul>
        <li>Type of bake (pizza, bread, focaccia, etc.)</li>
        <li>Water, flour, room, and dough temperatures</li>
        <li>Kneading, fermentation, shaping, and baking times</li>
        <li>Notes and comments on each bake</li>
    </ul>
    
    <div class="mt-3">
        <button class="btn btn-primary me-2" @onclick="ViewEntries">View Baking Entries</button>
        <button class="btn btn-success" @onclick="AddEntry">Add New Entry</button>
    </div>
</div>

@code {
    private void ViewEntries()
    {
        Navigation.NavigateTo("baking-entries");
    }

    private void AddEntry()
    {
        Navigation.NavigateTo("add-baking-entry");
    }
}
